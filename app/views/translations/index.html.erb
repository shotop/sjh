<div id="translations">
  <div class="container">
    <div class="row col-lg-12">
      <h1>Translations Page</h1>
      <p>translation meta information</p>
      <div class"col-lg-6">
        <h1>Russian</h1>
      </div>
      <div class"col-lg-6">
        <h1>English</h1>
      </div>
      <% @translations.each do |translation| %>
        <p><%= translation.eng_title %></p>
        <p><%= translation.rus_title %></p>
        <p><%= translation.eng_body %></p>
        <p><%= translation.rus_body %></p>
      <% end %>
    </div>
  </div>
</div>