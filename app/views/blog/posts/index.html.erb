<!-- Begin Body -->
<div id="blog-index">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="well">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for Articles">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">
                  <span class="fa fa-search"></span>
                </button>
              </span>
            </div>
          </div>
        <div id="posts">
          <% @posts.each do |post| %>
            <div class="post">
              <h1 class="text-center"><%= link_to post.title, blog_post_path(post) %></h1>
              <h2 class="text-center">Sam wrote this on <%= post.created_at.strftime("%B %d, %Y") %></h2>
              <p><%= post.body %></p>
              <div id="read-more-link">
                <p><%= link_to "Read More...", blog_post_path(post) %></p>
              </div>
              <footer class="post-footer">
                <div class="post-actions">
                  <i class="fa fa-comment-o"><%= pluralize(post.comments.count, 'Comment') %></i>
                  <i class="fa fa-share-alt-square"> Share</i>
                  <p class="pull-right"> Categories: <%= raw post.tag_list.map {|t| link_to t, categories_path(t)}.join(', ') %> </p>
                </div>
              </footer>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="well" id="categories">
          <h4 class="text-center">Explore</h4>
          <div class="row">
            <div class="col-lg-12">
              <ul class="list-unstyled">
                <% ActsAsTaggableOn::Tag.all.each do |tag| %>
                  <li><a href="#"><%= tag %></a></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="well" id="archives">
          <h4 class="text-center">The Archives</h4>
          <ul class="list-unstyled">
            <% @posts.each do |post| %>
              <li>
                <%= link_to post.title, blog_post_path(post) %>
                <div class="pull-right">
                  <%= post.created_at.strftime("%D") %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>