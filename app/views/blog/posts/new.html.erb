<div id="new-post">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1>New post</h1>
          <%= form_for @post ,:url => {:action => :create, :controller => :posts} do |f| %>
            <% if @post.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

                <ul>
                <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :title %><br>
              <%= f.text_field :title %>
            </div>
            <div class="field">
              <%= f.label :body %><br>
              <%= f.text_area :body %>
            </div>
            <div class="field">
              <%= f.label :tag_list, "Tags (separated by commas)" %><br>
              <%= f.text_area :tag_list %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
          <% end %>

        <%= link_to 'Back', blog_posts_path %>
      </div>
    </div>
  </div>
</div