<div id="post-show">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 pull-right" id="post-content">
        <h1 class="text-center"><%= @post.title %></h1>
        <h2 class="text-center">Sam wrote this on <%= @post.created_at.strftime("%B %d, %Y") %></h2>
        <p class="well" id="post_body">
          <%= @post.body %>
        </p>
      </div>
      <div class="col-lg-10 pull-right" id="comment-content">
        <div id="comments-header">
          <h2>Comments:</h2>
        </div>
        <div id="comments">
          <%= render :partial => @post.comments.reverse %>
        </div>

        <div id="replies" class="col-lg-12 pull-right well">
          <%= form_for ([:blog, @post, Comment.new]), remote: true do |f| %>
            <div id="reply-header">
              <h2>Leave A Comment</h2>
              <p>Your email address will not be published. Required fields are marked *</p>
            </div>
            <div class="input-group col-lg-6">
               <%= f.text_field :guest_name, class: 'form-control', placeholder: "Your Name *" %>
               <span class="input-group-addon">
                <i class="fa fa-user"></i>
               </span>
            </div>
            <div class="input-group col-lg-6">
              <%= f.text_field :guest_email, class: 'form-control', placeholder: "Your Email *" %>
              <span class="input-group-addon">
                <i class="fa fa-envelope"></i>
              </span>
            </div>
            <div class="form-group col-lg-12" id="comment-body">
             <%= f.text_area(:body, class: 'form-control', rows: 10, placeholder: "Your Comment") %>
            </div>
            <div class="form-group col-lg-12"
              <p><%= f.submit "Post Comment", class: 'btn btn-default pull-right'%></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>