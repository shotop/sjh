<div id="post-show">
  <div class="container">
    <div class="row">
      <div class="col-sm-2">
        <img class="img-rounded" src="/assets/samprofilepic.jpeg" width="110" height="120" alt="Sam Image">
        <p id="profile-description"><strong>Husband, Father, Software Engineer<br>
           Linguist, Musician
        </strong></p>
      </div>
      <div class="col-sm-10">
        <div id="individual-post-title">
          <h1 class="text-left"><%= @post.title %></h1>
          <span>By Sam Hotop on <%= @post.created_at.strftime("%D") %>
            <span class="pull-right"><%= @post.comments.count %> Comments</span>
          </span>
          <hr>
          <p class="well" id="post_body">
            <%= @post.body %>
          </p>
          <h2>Comments</h2>
          <div id="comments">
            <%= render :partial => @post.comments.reverse %>
          </div>

          <div id="replies">
            <%= form_for ([:blog, @post, Comment.new]), remote: true do |f| %>
              <h2>Leave A Reply</h2>
              <p>Your email address will not be published. Required fields are marked *</p>
              <br>
              <br>
              <p><%= f.label "Enter Name *" %>
                 <%= f.text_field :guest_name %>
              </p>
              <br>
              <p><%= f.label "Enter Email *" %>
                 <%= f.text_field :guest_email %>
              </p>
              <br>
              <p><%= f.label "Comment" %>
                 <%= f.text_area(:body, size: "80x6") %>
              </p>
              <br>
              <p><%= f.submit "Post Comment" %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>