<div id="post-show">
  <div class="container">
    <div class="row">
      <div class="col-sm-2">
        <img class="img-circle" src="/assets/samprofilepic.jpeg" width="110" height="120" alt="Sam Image">
      </div>
      <div class="col-sm-10">
        <div id="posts">
          <h1 class="text-left"><%= @post.title %></h1>
          <span>By Sam Hotop on <%= @post.created_at.strftime("%D") %>
            <span class="pull-right"><%= @post.comments.count %> Comments</span>
          </span>
          <hr>
          <p>
            <%= @post.body %>
          </p>
          <h2>Comments</h2>
          <div id="comments">
            <% @post.comments.each do |comment| %>
              <%= div_for comment do %>
                <p>
                  <strong>Posted <%= time_ago_in_words(comment.created_at) %> ago</strong><br />
                  <%= h(comment.body) %>
                </p>
              <% end %>
            <% end %>
          </div>

          <%= form_for ([:blog, @post, Comment.new]) do |f| %>
            <p>Leave A Reply</p>
            <p>Your email address will not be published. Required fields are marked *</p>
            <br>
            <br>
            <p><%= f.label "Enter Name *" %>
               <%= f.text_field :guest_name %>
            </p>
            <br>
            <p><%= f.label "Enter Email *" %>
               <%= f.text_field :guest_email %>
            </p>
            <br>
            <p><%= f.label "Comment" %>
               <%= f.text_area(:body, size: "80x6") %>
            </p>
            <br>
            <p><%= f.submit "Post Comment" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>